

<div class="container">
    
<h2>Update the products</h2>
{{#with products}}

<form class="col-lg-4 col-md-4" action="/products/{{_id}}/edit" method="POST"> 

   <div class="form-group mt-2 ">
    
    <label for="name">Image name:</label>
    <input type="file" class="form-control" id="image" name="image"  value="{{this.image}}" required/>
  </div>
  <div class="form-group mt-2 ">
    
    <label for="name">Product name:</label>
    <input type="text" class="form-control" id="name" name="name" value="{{this.name}}" required>
  </div>
  
   <div class="form-group mt-2">
                <label for="quantity">Quantity</label>
                
                <select  class="form-control" id="quantiy" name="quantiy" value="{{this.quantity}}">
                    <option value="" >200g</option>
                    <option value="">1kg</option>
                    <option value="">500g</option>
                    <option value="">200g</option>
                  </select>
            
 </div>

 <div class="form-group mt-2 ">
    <label for="price">Price</label>
    <input type="text" class="form-control" id="price" name="price" value="{{this.price}}" required>
  </div>
 
  <button type="submit" class="btn btn-success mt-4">Update product</button>

</form>
 {{/with}}
</div>